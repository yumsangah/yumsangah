	<!-- <bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName" value="jdbc/springDB"></property>
		<property name="resourceRef" value="true"></property>
	</bean> -->
	
	<!-- pool + pool 없어도 db 접근 가능?  dbcp + pool 라이브러리 추가-->
	<bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
		<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
		<property name="username" value="jsp"/>
		<property name="password" value="1234"/>
		<property name="maxActive" value="30"/>
		<property name="maxIdle" value="30"/>
		<property name="maxWait" value="1000"/>
		<property name="defaultAutoCommit" value="true"/>	
	</bean>
	
	<!-- 5.2 Mapper Resource-->
	<bean id="sqlSessionFactoryBean" class="org.mybatis.spring.SqlSessionFactoryBean">
		<!-- <property name="mapperLocations">
			<list>
				<value>classpath:com/java/guest/dao/mapper/AddrMapper.xml</value>				
			</list>
		</property> -->
		
		<property name="mapperLocations" value="classpath*:com/java/**/**/**/*.xml"/>
		<property name="dataSource" ref="dataSource"/>	
	</bean>
		
	<!-- 5.3 SqlSessionFactoryBuilder().build(DriverManager,Mapper Resource-->
	<bean id="SqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactoryBean"/>
	</bean>		
</beans>
